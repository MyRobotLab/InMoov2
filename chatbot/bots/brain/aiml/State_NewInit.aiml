<?xml version="1.0" encoding="UTF-8"?>
<aiml>

<category>
  <pattern>NewInit</pattern>
  <template>
    <think>
      <set name="NewInit">started</set>
    </think>
      <think>
      <set name="topic">NewInit</set>
    </think> I am listening. What would you like to change my
    name to ? </template>
</category>

<topic name="NEWINIT">
  <category>
    <pattern>#</pattern>
    <that># CHANGE MY NAME TO #</that>
    <template>
      <set name="questionnewinit">if my new name is <star /> , say yes or no or stop</set>
      <think>
        <set name="tmpname">
          <star />
        </set>
      </think>
    </template>
  </category>

  <category>
    <pattern># YES #</pattern>
    <that># IF MY NEW NAME IS #</that>
    <template>
      <random>
        <li> I like this name , <get name="tmpname" /> . </li>
        <li> Nice name, <get name="tmpname" /> is great. </li>
      </random>
      <think>
        <set name="botname">
          <get name="tmpname" />
        </set>
        <set name="NewInit"></set>
        <set name="topic">changing name</set>
      </think>
    </template>
  </category>

  <category>
    <pattern># NO #</pattern>
    <that># IF MY NEW NAME IS #</that>
    <template>Let's restart.
      I am listening. What would you like to change my name to ?</template>
  </category>

  <category>
    <pattern># STOP #</pattern>
    <that># IF MY NEW NAME IS #</that>
    <template>Ok I keep my name <get name="botname" />
    </template>
  </category>
</topic>


</aiml>